<script>
   function onSubmit(token) {
    document.getElementById("login-form").submit();
   }
</script>

<form action="/login" method="post" id="login-form">
	<div>
		{{#if error}}
			<p class="err-msg">Username or Password is incorrect.</p>
		{{else if customerror}}
			<p class="err-msg">{{ customerror }}</p>
		{{else if success}}
			<div class="success"><p>Successfully created account.</p><p>Please log in below.</p></div>
		{{else if userexists}} <!-- This can be deprecated --> 
			<div class="err-msg"><p>Username already exists</p><p>Please log in instead.</p></div>
		{{else if invalidemail}}  <!-- This can be deprecated -->
			<div class="err-msg"><p>Invalid email address.</p></div>
		{{else if reset}}
			<div class="success"><p>Password successfully reset.</p></div>
		{{else if expired}}
			<div class="err-msg"><p>This link may have expired. Please reset your password again.</p></div>
		{{else if resetsuccess}}
			<div class="success"><p>Please check your email for a password reset link.</p></div>
		{{/if }}
		<h1>Login</h1>
	</div>
	<div class="form-group">
		<label>Username: </label>
		<input 
			type="email" 
			name="username" 
			id="username" 
			placeholder="Enter your email address" 
			tabindex="1"
			required />
	</div>
	<div class="form-group">
		<label>Password: <a href="reset">Forgot Password?</a></label>
		<input 
			type="password" 
			name="password" 
			id="password"
			placeholder="Enter your password" 
			tabindex="2"
			required />
	</div>
	<div>
		<input class="g-recaptcha" 
			data-sitekey="6LccilwmAAAAAH0fmh5S4Ug6QhisVEtE_5InqFrI" 
			data-callback='onSubmit' 
			data-action='submit'
			type="submit"
			value="Login"
			tabindex="3">
		</input>
	</div>
	<div class="register-link">
		<p>Don't have an account? <a href="register">Register Here</a></p>
	</div>
</form>